<h1>Articles#index</h1>

<%= link_to "New Article" , new_article_path, class:"btn btn-primary btn-lg", id: "new-article-btn" %></br></br>

<% if @articles.empty? %>
	<h1 id="no-articles">No Article Created</h1>
<% else %>
  <% @articles.each do |article| %>
	<div class="well well-lg">
   	   <div class="article-title">
   	   	 <%= link_to article.title, article_path(article) %>
  	   </div>
  	   <div class="article-body">
        <!-- truncate method using the article.body and after 500 caracters just cut it and "..." on the end -->
  		   <%= truncate(article.body, length:500) %> 
  	   </div>
       <div class="author">
         <small>Created by: <%= article.user.email %></small>
       </div>
    </div>
  <% end %>
<% end %>
